# EditorConfig is awesome: http://EditorConfig.org

# 顶层 EditorConfig 文件
root = true

# Unix-风格换行和尾行
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# 默认字符编码
[*.{htm,html,js,json,xml,php,css,md,txt,htaccess,gitignore}]
charset = utf-8

# 空格缩进
[*.{htm,html,js,json,xml,php,css,md,txt,htaccess,gitignore}]
indent_style = space
indent_size = 4
